@model ThaiSonBacDMS.Areas.HangHoa.Models.OrderTotalModel
@{
    ViewBag.Title = "Delivery";
    Layout = "~/Areas/HangHoa/Views/Shared/_Layout.cshtml";
}
<style>
    .label-medium {
        vertical-align: super;
        font-size: medium;
    }

    .input-group {
        padding-bottom: 10px;
    }

    .custom-btn {
        padding: 10px 5px;
        min-width: 60px;
        height: 40px;
    }

    .accountant-view-box-body-custom {
        font-size: 20px;
    }

    .a-custom-label {
        color: white;
    }

    th {
        color: white;
        background-color: #3c8dbc;
        font-weight: bold;
        text-align: center;
    }

    td {
        text-align: center;
    }

    tfoot {
        color: white;
        text-align: center;
        font-size: 16px;
        font-weight: bold;
        background-color: #544d61;
    }

    textarea {
        resize: vertical;
