@model ThaiSonBacDMS.Areas.HangHoa.Models.OrderTotalModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/HangHoa/Views/Shared/_Layout.cshtml";
}
<style>
    .label-medium {
        vertical-align: super;
        font-size: medium;
    }

    .input-group {
        padding-bottom: 10px;
    }

    .custom-btn {
        padding: 10px 5px;
        min-width: 60px;
        height: 40px;
    }

    .accountant-view-box-body-custom {
        font-size: 20px;
    }

    .a-custom-label {
        color: white;
    }

    th {
        color: white;
        background-color: #3c8dbc;
        font-weight: bold;
        text-align: center;
    }

    td {
        text-align: center;
    }

    tfoot {
        color: white;
        text-align: center;
        font-size: 16px;
        font-weight: bold;
        background-color: #544d61;
    }

    textarea {
        resize: vertical;
        resize: horizontal;
    }

    .mainTable {
        background-color: rgb(240, 240, 240);
    }

        .mainTable thead tr th {
            vertical-align: middle !important;
            text-align: center;
            background-color: #3c8dbc;
            color: #fff;
        }

    .custom-span {
        margin: 0 0 0 10px;
    }

    .custom-btn {
        padding: 10px 5px;
        min-width: 80px;
        height: 55px;
    }

    .menu-button {
        background-color: #fcf9f9;
        margin-top: 20px;
        padding-top: 20px;
        padding-right: 25px;
    }
</style>

<!-- Content Header (Page header) -->
<section class="content-header">
    <ol class="breadcrumb">
        <li><i class="fa fa-dashboard"></i>&nbsp;&nbsp;&nbsp;@Html.ActionLink("Trang chủ", "Index", "Home")</li>
        <li>Đơn hàng</li>
        <li class="active">Phiếu đang soạn</li>
    </ol>
</section>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box">
                    <div class="row" style="margin-left:0px; margin-right:0px; margin-top: 10px;">
                        <div class="col-md-12">
                            <h4>
                                <b>ĐƠN HÀNG LÔ SỐ: @Model.orderId</b>
                            </h4>
                            <input type="hidden" value="@Model.orderId" id="orderId" />
                        </div>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body pad box">
                        <div class="row">
                            <div class="box-header with-border text-center menu-button" style="margin-left: 5px; margin-right: 5px;">
                                <a class="btn btn-app custom-btn disabled">
                                    <i class="fa fa-plus-square text-gray"></i>
                                    <span><strong>Tạo Mới</strong></span>
                                </a>
                                <a class="btn btn-app custom-btn disabled disabled">
                                    <i class="fa fa-edit text-gray"></i>
                                    <span><strong>Sửa</strong></span>
                                </a>
                                <button class="btn btn-app custom-btn disabled">
                                    <i class="fa fa-save text-gray"></i>
                                    <span><strong>Lưu</strong></span>
                                </button>
                                <a class="btn btn-app custom-btn" data-toggle="modal" title="Hủy" data-placement="bottom" data-target="#confirmCancel">
                                    <i class="fa fa-close text-red"></i>
                                    <span><strong>Hủy</strong></span>
                                </a>
                                <button class="btn btn-app custom-btn" data-toggle="modal" title="Chốt đơn" data-placement="bottom" id="btnSubmit">
                                    <i class="fa fa-check-circle text-green"></i>
                                    <span><strong>Chốt đơn</strong></span>
                                </button>
                                <a class="btn btn-app custom-btn disabled">
                                    <i class="fa fa-exchange text-gray"></i>
                                    <span><strong>Đổi trả</strong></span>
                                </a>
                                <a class="btn btn-app custom-btn disabled">
                                    <i class="fa fa-eye text-gray"></i>
                                    <span><strong>Xem Trước</strong></span>
                                </a>
                                <a class="btn btn-app custom-btn" onclick="toBeContinued();" data-toggle="tooltip" title="In" data-placement="bottom">
                                    <i class="fa fa-print text-blue"></i>
                                    <span><strong>In</strong></span>
                                </a>
                                <a class="btn btn-app custom-btn disabled">
                                    <i class="fa fa-download text-gray"></i>
                                    <span><strong>Import Excel</strong></span>
                                </a>
                                <a class="btn btn-app custom-btn" onclick="toBeContinued();" data-toggle="tooltip" title="Xuất Excel" data-placement="bottom">
                                    <i class="fa fa-file-excel-o text-green"></i>
                                    <span><strong>Xuất Excel</strong></span>
                                </a>
                                <a class="btn btn-app custom-btn" onclick="toBeContinued();" data-toggle="tooltip" title="Xuất PDF" data-placement="bottom">
                                    <i class="fa fa-file-pdf-o text-orange"></i>
                                    <span><strong>Xuất PDF</strong></span>
                                </a>
                            </div>
                        </div>
                        <form style="margin-top: 25px;">
                            <div class="box-header">
                                <div class="row">
                                    <div class="col-sm-12">
                                        <fieldset>
                                            <legend><b style="font-size: 17px;">Thông tin đơn hàng</b></legend>
                                            <div class="box-header">
                                                <div class="row">
                                                    <div class="col-md-6">
                                                        <label>Đơn vị</label><span style="color: red;">*</span>
                                                        <div class="input-group">
                                                            <span class="input-group-addon"><i class="fa fa-user"></i></span>
                                                            <input class="form-control" disabled value="@Model.customerName" />
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <label>Mã số thuế</label><span style="color: red;">*</span>
                                                        <div class="input-group">
                                                            <span class="input-group-addon"><i class="fa fa-bank"></i></span>
                                                            <input class="form-control" disabled value="@Model.taxCode" />
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row" style="margin-top: 15px;">
                                                    <div class="col-md-6">
                                                        <label>Nơi xuất HĐ</label><span style="color: red;">*</span>
                                                        <div class="input-group">
                                                            <span class="input-group-addon"><i class="fa fa-user-circle"></i></span>
                                                            <input class="form-control" disabled value="@Model.invoiceAddress" />
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <label>Địa chỉ giao hàng</label><span style="color: red;">*</span>
                                                        <div class="input-group">
                                                            <span class="input-group-addon"><i class="fa fa-address-book"></i></span>
                                                            <input class="form-control" disabled value="@Model.deliveryAddress" />
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row" style="margin-top: 15px;">
                                                    <div class="col-md-6">
                                                        <label>Số hóa đơn</label><span style="color: red;">*</span>
                                                        <div class="input-group">
                                                            <span class="input-group-addon"><i class="fa fa-truck"></i></span>
                                                            <input class="form-control" disabled value="@Model.invoiceNumber" />
                                                        </div>
                                                    </div>
                                                    <div class="col-md-2">
                                                        <div style="margin-top: 25px;">
                                                            <label>
                                                                Đã lấy hóa đơn
                                                            </label>
                                                            <span class="custom-span">
                                                                <input type="checkbox" id="takeInvoice">
                                                                <input type="hidden" id="dateTakeInvoice" value="@Model.dateTakeInvoice"/>
                                                            </span>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-2">
                                                        <div style="margin-top: 25px;">
                                                            <label>
                                                                Đã lấy phiếu
                                                            </label>
                                                            <span class="custom-span">
                                                                <input type="checkbox" id="takeBallot">
                                                                <input type="hidden" id="dateTakeBallot" value="@Model.dateTakeBallot" />
                                                            </span>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-2">
                                                        <label>Trạng Thái</label>
                                                        <div class="input-group">
                                                            <span class="label label-primary label-medium">
                                                                @Model.status
                                                                <!-- <a href="phanphoi_donhang_tien-trinh-don-hang.html" class="a-custom-label">Đã xuất phiếu</a> -->
                                                            </span>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </fieldset>

                                    </div>
                                </div>
                            </div>
                            <div class="box-header">
                                <div class="row" style="margin-top: 10px;">
                                    <div class="col-xs-12 table-responsive">
                                        <fieldset>
                                            <legend><b style="font-size: 17px;">Chi tiết đơn hàng</b></legend>
                                            <table class="table table-striped mainTable">
                                                <thead>
                                                    <tr>
                                                        <th rowspan="2">STT</th>
                                                        <th rowspan="2" style="width: 500px;">Tên hàng</th>
                                                        <th colspan="2">Số lượng</th>
                                                        <th rowspan="2">Đã đủ&nbsp;&nbsp;&nbsp;<input type="checkbox" id="checkAll" style="vertical-align: sub;" /></th>
                                                    </tr>
                                                    <tr>
                                                        <th>Cái</th>
                                                        <th>Thùng</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @for (int i = 0; i < Model.readItems.Count; i++)
                                                    {
                                                        <tr>
                                                            <td style="vertical-align: inherit;">@(i + 1)</td>
                                                            <td style="vertical-align: middle;">
                                                                <input type="text" value="@Model.readItems[i].code" disabled class="form-control" />
                                                            </td>
                                                            <td><input type="text" value="@Model.readItems[i].Quantity" style="text-align:right;" disabled class="form-control" /></td>
                                                            <td><input type="text" value="@Model.readItems[i].Box" style="text-align:right;" disabled class="form-control" /></td>
                                                            <td style="vertical-align: inherit;"><input type="checkbox" required class="checkPer" /></td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </fieldset>
                                    </div>
                                    <!-- /.col -->
                                </div>
                            </div>
                            <div id="sound"></div>
                        </form>
                    </div>
                </div>
            </div>
            <!-- /.col-->
        </div>
        <!-- ./row -->
    </section>
    <div class="modal fade" id="confirmComplete" role="dialog">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Xác nhận chốt đơn ?</h4>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-success" data-dismiss="modal" onclick="doneOrder();">Đồng ý</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="confirmCancel" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Xác nhận hủy đơn hàng</h4>
                </div>
                <div class="modal-body">
                    <label>Bạn muốn hủy đơn hàng?</label>
                    <br />
                    <p>Lý do</p>
                    <textarea style="width: 100%" rows="10" id="reason"></textarea>
                </div>
                <div class="modal-footer">
                    <input type="button" class="btn btn-default" data-dismiss="modal" value="Đóng">
                    <button type="button" class="btn btn-danger btn-ok" data-dismiss="modal" onclick="cancelOrder();">Đồng ý</button>
                </div>
            </div>
        </div>
    </div>
    <!-- /.content -->
}
@section ChiTietPhieu
{
    <script src="/Assets/dist/js/sweetalert2.all.js"></script>
    <script>
        $(document).ready(function () {
            $("#btnSubmit").click(function (event) {
                if ($('.checkPer:checked').length === $('.checkPer').length) {
                    event.preventDefault();
                    $("#confirmComplete").modal();
                } else {
                    $('form')[0].checkValidity();
                }
            });
            if ($('#dateTakeInvoice').val() !== "") {
                $('#takeInvoice').prop("checked", true);
            }
            if ($('#dateTakeBallot').val() !== "") {
                $('#takeBallot').prop("checked", true);
            }
            $("#checkAll").click(function () {
                $('.checkPer').prop('checked', this.checked);
            });
        });
        function doneOrder() {
            var takeInvoice = false;
            var takeBallot = false;
            if ($('#takeInvoice').prop("checked")) {
                takeInvoice = true;
            }
            if ($('#takeBallot').prop("checked")) {
                takeBallot = true;
            }
            $.ajax({
                url: '/HangHoa/ChiTietPhieu/CheckOut',
                type: 'POST',
                dataType: 'json',
                data: { orderId: $('#orderId').val(), takeInvoice: takeInvoice, takeBallot: takeBallot },
                success: function () {
                    document.getElementById("sound").innerHTML = '<audio autoplay="autoplay"><source src="/Assets/dist/facebook_sound.mp3" type="audio/mpeg" /><embed hidden="true" autostart="true" loop="false" src="/Assets/dist/facebook_sound.mp3" /></audio>';
                    swal({
                        title: '<img src="/Assets/dist/img/messagePic_6.png"/>',
                        type: 'success'
                    }).then((result) => {
                        if (result.value) {
                            window.location.href = '/HangHoa/Home/Index';
                        }
                    });
                },
                error: function () {
                    swal({
                        title: '<img src="/Assets/dist/img/messagePic_9.png"/>',
                        text: '<img src="/Assets/dist/img/messagePic_8.png"/>',
                        type: 'error',
                        showCancelButton: false,
                        showConfirmButton: true
                    });
                }
            });
        }

        function toBeContinued() {
            swal({
                title: 'Chức năng này đang được phát triển!',
                type: "warning",
            });
        }

        function cancelOrder() {
            $.ajax({
                url: '/HangHoa/ChiTietPhieu/CancelOrder',
                dataType: 'json',
                data: { orderId: $('#orderId').val(), note: $('#reason').val() },
                success: function () {
                    document.getElementById("sound").innerHTML = '<audio autoplay="autoplay"><source src="/Assets/dist/facebook_sound.mp3" type="audio/mpeg" /><embed hidden="true" autostart="true" loop="false" src="dist/facebook_sound.mp3" /></audio>';
                    swal({
                        title: '<img src="/Assets/dist/img/messagePic_10.png"/>',
                        type: 'success'
                    }).then((result) => {
                        if (result.value) {
                            window.location.href = '/HangHoa/Home/Index';
                        }
                    });
                },
                error: function () {
                    swal({
                        title: '<img src="/Assets/dist/img/messagePic_11.png"/>',
                        type: 'error'
                    });
                }
            });
        }
    </script>
}

