@model ThaiSonBacDMS.Areas.KeToan.Models.OrderTotalModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/KeToan/Views/Shared/_Layout.cshtml";
}
<style>
    .label-medium {
        vertical-align: super;
        font-size: medium;
    }

    .menu-button {
        background-color: #fcf9f9;
        margin-top: 20px;
        padding-top: 20px;
        padding-right: 25px;
    }

    .custom-btn {
        padding: 10px 5px;
        min-width: 80px;
        height: 55px;
    }

    .mainTable {
        background-color: rgb(240, 240, 240);
    }

    .number {
        text-align: right;
    }

    .mainTable thead tr th {
        vertical-align: middle !important;
        text-align: center;
        background-color: #3c8dbc;
        color: #fff;
    }

    .mainTable tbody tr td:nth-child(1) {
        vertical-align: middle;
        text-align: center;
    }

    .mainTable tbody tr td:nth-child(4), .mainTable tbody tr td:nth-child(5),
    .mainTable tbody tr td:nth-child(6), .mainTable tbody tr td:nth-child(7),
    .mainTable tbody tr td:nth-child(8), .mainTable tbody tr td:nth-child(9) {
        text-align: right;
    }

    .pointerCursor {
        cursor: pointer;
    }

    .textCursor {
        cursor: text;
    }

    .noDisplay {
        display: none !important;
    }
</style>

<!-- Content Header (Page header) -->
<section class="content-header">
    <ol class="breadcrumb">
        <li><i class="fa fa-dashboard"></i>&nbsp;&nbsp;&nbsp;@Html.ActionLink("Trang chủ", "Index", "Home")</li>
        <li>Đơn hàng</li>
        <li class="active">Phiếu đang soạn</li>
    </ol>
</section>
