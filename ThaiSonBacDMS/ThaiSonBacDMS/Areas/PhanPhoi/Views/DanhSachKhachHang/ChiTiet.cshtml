<section class="content-header">
    <ol class="breadcrumb">
        <li>
            <a href="#">
                <i class="fa fa-dashboard"></i> Trang Chủ
            </a>
        </li>
        <li>
            <a href="#">
                <i class=""></i> Danh sách khách hàng
            </a>
        </li>
        <li>
            <a href="#">
                <i class=""></i> Chi tiết khách hàng
            </a>
        </li>
    </ol>
</section>
<br>
<section class="content">
    <div class="row">
        <div class="col-md-3">
            <div class="box box-primary">
                <div class="box-body box-profile">
                    <img class="profile-user-img img-responsive img-circle" src="@Model.avatar_str" alt="User profile picture">
                    <h3 class="profile-username text-center">@Model.customer.Customer_name</h3>
                    <p class="text-muted text-center"></p>
                    <ul class="list-group list-group-unbordered">
                        <li class="list-group-item">
                            <i class="fa fa-codepen"></i>
                            <b>Mã KH</b>
                            <a class="pull-right" id="cusomterID">@Model.customer.Customer_ID</a>
                        </li>
                        <li class="list-group-item">
                            <i class="fa fa-diamond"></i>
                            <b>Xếp hạng</b>
                            <a class="pull-right">
                                <span class="label label-primary">@Model.customer.Rank</span>
                            </a>
                        </li>
                        <li class="list-group-item">
                            <i class="fa fa-address-book"></i>
                            <b>Địa chỉ</b>
                            <br>
                            <span style="color: #4682b4">@Model.customer.Delivery_address</span>
                        </li>
                        <li class="list-group-item">
                            <i class="fa fa-bank"></i>
                            <b>MST</b>
                            <a class="pull-right">@Model.customer.Tax_code</a>
                        </li>
                        <li class="list-group-item">
                            <i class="fa fa-phone"></i>
                            <b>Số điện thoại</b>
                            <a class="pull-right">@Model.customer.Phone</a>
                        </li>
                        <li class="list-group-item">
                            <i class="fa fa-phone"></i>
                            <b>Ngày tạo</b>
                            <a class="pull-right">@Model.customer.Date_Created.Value.ToString("dd/MM/yyyy")</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-md-9">
            <div class="nav-tabs-custom">
                <div class="nav nav-tabs">
                    <ul class="nav nav-tabs">
                        <li class="active">
                            <a href="#doanhthu" data-toggle="tab" aria-expanded="true">Doanh thu</a>
                        </li>
                        <li class="">
                            <a href="#mathang" data-toggle="tab" aria-expanded="false">Mặt hàng</a>
                        </li>
                        <li class="">
                            <a href="#chinhsua" data-toggle="tab" aria-expanded="false">Chỉnh sửa</a>
                        </li>
                    </ul>
                </div>
                <div class="tab-content">
                    <div class="active tab-pane" id="doanhthu">
                        <div class="container-fluid">
                            <div class="row">
                                <h2 class="text-center">
                                    <strong>Doanh thu 6 tháng gần nhất</strong>
                                </h2>
                                <canvas id="line-chart" width="800" height="450"></canvas>
                            </div>
                            <br>
                            <div class="row text-center" style="font-size:15px">
                                <label class="col-md-4">Số đơn hàng</label>
                                <label class="col-md-4">Tổng giá trị các đơn hàng</label>
                                <label class="col-md-4">Còn nợ</label>
                            </div>
                            <div class="row text-center" style="font-size:20px">
                                <label class="col-md-4" style="color:#439c07"><span class="number">@Model.numberOrder</span> lần</label>
                                <label class="col-md-4"><span class="number">@Model.priceOrder</span> đồng</label>
                                <label class="col-md-4" style="color:#ff3300"><span class="number">@Model.currentDebt</span> đồng</label>
                            </div>
                        </div>
                        <div class="container-fluid">
                            <div class="row">
                                <div class="col-md-12">
                                    <h4>
                                        <b>DANH SÁCH ĐƠN HÀNG</b>
                                    </h4>
                                </div>
                            </div>
                            <hr>
                            <div class="row">

                                <div class="col-md-12">
                                    <table id="mainTable" class="table table-striped">
                                        <thead>
                                            <tr>
                                                <th>STT</th>
                                                <th>Lô số</th>
                                                <th>Ngày</th>
                                                <th>Tổng tiền</th>
                                                <th>Trạng thái</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @{ var i = 1; }
                                            @foreach(var item in Model.lstTotal) { 
                                                <tr>
                                                    <td>@i</td>
                                                    <td>
                                                        <a href="#">@item.Order_ID</a>
                                                    </td>
                                                    <td>@item.Date_created.ToString("dd/MM/yyyy")</td>
                                                    <td class="number">@item.Total_price</td>
                                                    <td>
                                                        @if (item.Status_ID == 1)
                                                        {
                                                        <span class="label label-info">Bản Nháp</span>
                                                        }
                                                        else if (item.Status_ID == 2)
                                                        {
                                                            <span class="label label-warning">Chưa xuất phiếu</span>
                                                        }
                                                        else if (item.Status_ID == 3)
                                                        {
                                                            <span class="label label-primary">Đã xuất phiếu</span>
                                                        }
                                                        else if (item.Status_ID == 4)
                                                        {
                                                            <span class="label label-primary">Kế toán đã xử lí</span>
                                                        }
                                                        else if (item.Status_ID == 5)
                                                        {
                                                            <span class="label label-primary">Đã xuất kho</span>
                                                        }
                                                        else if (item.Status_ID == 6)
                                                        {
                                                            <span class="label label-primary">Đang giao hàng</span>
                                                        }
                              
                                                        else if (item.Status_ID == 7)
                                                        {
                                                            <span class="label label-success">Hoàn thành"</span>
                                                        }
                                                        else if (item.Status_ID == 8)
                                                        {
                                                            <span class="label label-danger">Đã hủy</span>
                                                        }
                                                        else if (item.Status_ID == 9)
                                                        {
                                                            <span class="label label-danger">Từ Chối</span>
                                                        } 
                                                    </td>
                                                </tr>
                                                i++;
                                            }
                                        </tbody>
                                        <tfoot></tfoot>
                                    </table>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <span class="label label-default pull-right" id="attach_box" style="padding : 5px;">
                                        <a href="phanphoi_toBeContinue.html" style="color:black">Xem tất cả</a>
                                    </span>
                                </div>
                            </div>
                            <br>
                            <br>
                        </div>
                    </div>
                    <div class="tab-pane" id="mathang">
                        <div class="container-fluid">
                            <div class="row">
                                <h2 class="text-center">
                                    <strong>CÁC MẶT HÀNG MUA NHIỀU NHẤT</strong>
                                </h2>
                                <canvas id="doughnut-chart" width="640" height="360"></canvas>
                            </div>
                        </div>
                    </div>
                    <div class="tab-pane" id="chinhsua" style="padding-top: 32px;">
                        <div class="row">
                            <div id="kv-avatar-errors-2" class="center-block" style="width:800px;display:none"></div>
                            <form class="form form-vertical">
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="col-md-4 text-center">
                                            <div id="image-preview">
                                                <label for="image-upload" id="image-label">Chọn hình ảnh</label>
                                                <input type="file" name="image" id="image-upload" />
                                            </div>
                                        </div>
                                        <div class="col-md-8">
                                            <div class="col-md-12">
                                                <div class="row">
                                                    <label>Đơn vị</label>
                                                    <div class="input-group">
                                                        <span class="input-group-addon">
                                                            <i class="fa fa-user"></i>
                                                        </span>
                                                        <input class="form-control" value="@Model.customer.Customer_name" id="supplier_name">
                                                    </div>
                                                </div>
                                                <div class="row" style="margin-top: 10px;">
                                                    <label>Số điện thoại</label>
                                                    <div class="input-group">
                                                        <span class="input-group-addon">
                                                            <i class="fa fa-phone"></i>
                                                        </span>
                                                        <input class="form-control" value="@Model.customer.Phone" type="text" id="phone">
                                                    </div>
                                                </div>
                                                <div class="row" style="margin-top: 10px;">
                                                    <label>Địa chỉ</label>
                                                    <div class="input-group">
                                                        <span class="input-group-addon">
                                                            <i class="fa fa-address-book"></i>
                                                        </span>
                                                        <input class="form-control" value="@Model.customer.Delivery_address" type="text" id="address">
                                                    </div>
                                                </div>
                                                <div class="row" style="margin-top: 10px;">
                                                    <label>Địa chỉ giao hàng</label>
                                                    <div class="input-group">
                                                        <span class="input-group-addon">
                                                            <i class="fa fa-address-book"></i>
                                                        </span>
                                                        <input class="form-control" value="@Model.customer.Export_invoice_address" type="text" id="deliver_address">
                                                    </div>
                                                </div>
                                                <div class="row" style="margin-top: 10px;">
                                                    <label>Email</label>
                                                    <div class="input-group">
                                                        <span class="input-group-addon">
                                                            <i class="fa fa-envelope"></i>
                                                        </span>
                                                        <input class="form-control" value="@Model.customer.Mail" type="text" id="supplier_email">
                                                    </div>
                                                </div>
                                                <div class="row" style="margin-top: 10px;">
                                                    <label>MST</label>
                                                    <div class="input-group">
                                                        <span class="input-group-addon">
                                                            <i class="fa fa-bank"></i>
                                                        </span>
                                                        <input class="form-control" value="@Model.customer.Tax_code" type="text" id="mst">
                                                    </div>
                                                </div>
                                                
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <a id="btnCreate" class="btn btn-primary btn-block pull-right" style="width: 100px; margin-right: 15px; margin-top: 20px;" disabled>
                                    <b>Chỉnh sửa</b>
                                </a>
                            </form>
                        </div>
                    </div>
                </div>
                <br>
                <br>

            </div>
        </div>
    </div>
</section>
