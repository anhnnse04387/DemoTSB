        }

         #image-preview {
            width: 200px;
            height: 200px;
            position: relative;
            overflow: hidden;
            color: #ecf0f1;
            margin-left: 30px;
            background-image: url('@Model.avatar_str');
            background-size: cover;
            background-repeat: no-repeat;
            border: solid 1px;
        }

            #image-preview input {
                position: absolute;
                opacity: 0;
            }

            #image-preview label {
                position: absolute;
                cursor: pointer;
                text-transform: uppercase;
                margin: auto;
                margin-top: 160px;
                margin-left: -18px;
                text-align: center;
