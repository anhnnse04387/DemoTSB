@section LapPhieu
{
    <script type="text/javascript">
        $(function () {
            $('#addLstItem').on('click', function () {
                $.post('@Url.Action("CreateItem")', $('form').serializeModel(), function (html) {
                    $('#detailOrder').html(html);
                });
            });
        });
        $.fn.serializeModel = function () {
            var model = {};
            $(this).serializeArray().map(function (item) {
                model[item.name] = item.value;
            });
            return model;
        };

    </script>
}
@section LookupCustomer
{

    <script type="text/javascript">
        $(document).ready(function () {
            $('#customer').change(function () {
                $.ajax({
                    type: "post",
                    url: "/LapPhieu/changeCustomer",
                    data: $('form').serializeModel(),
                    datatype: "json",
                    traditional: true,
                    success: function (data) {
                        document.getElementById('deliveryAddress').value = data.deliveryAddress;
                        document.getElementById('taxCode').value = data.taxCode;
                        document.getElementById('invoiceAddress').value = data.invoiceAddress;
                    }
                });
            });
        });
        $.fn.serializeModel = function () {
            var model = {};
            $(this).serializeArray().map(function (item) {
                model[item.name] = item.value;
            });
            return model;
        };
    </script>
}



