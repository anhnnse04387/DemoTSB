@model Models.Framework.Note
@{
    var session = (ThaiSonBacDMS.Common.UserSession)Session[ThaiSonBacDMS.Common.CommonConstants.USER_SESSION];
}
<!-- Modal -->
<div class="modal fade" id="noteModal" role="dialog">

    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            @using (Html.BeginForm("NoteEdit", "Home", FormMethod.Post))
            {
                @Html.HiddenFor(model => model.Account_ID);
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Ghi chú</h4>
                </div>
                <div class="modal-body">
                    @Html.TextAreaFor(model => model.Contents, new { @class = "textarea", @style = "width: 100%; height: 200px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; margin-top: 20px;", @id = "txtNote", @autofocus = "autofocus" })
                </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-success">Thêm mới</button>
                        <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>
                    </div>
            }
        </div>

    </div>
</div>
