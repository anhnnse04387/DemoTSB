                        <div class="col-md-12">
                            <h4>
                                <b>Đơn hàng lô số 82368-1</b>
                            </h4>
                        </div>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="box" style="padding-top: 20px; padding-bottom: 30px;">
                                    <div class="stepper">
