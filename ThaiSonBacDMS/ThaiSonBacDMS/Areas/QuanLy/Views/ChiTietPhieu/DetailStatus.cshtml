                                            <div class="stepper__step-text">Lập Phiếu</div>
                                            <div class="stepper__step-date">@Model.dict[1].date</div>
                                        </div>
                                        <div class="stepper__step stepper__step--finish" title="Người phụ trách" data-toggle="popover" data-trigger="hover" data-placement="top" data-content="@Model.dict[3].name">
                                            <div class="stepper__step-icon @Model.dict[3].classAttr">
                                                <svg class="shopee-svg-icon icon-order-paid" enable-background="new 0 0 32 32" viewBox="0 0 32 32" x="0" y="0">
                                                    <g><path clip-rule="evenodd" d="m24 22h-21c-.5 0-1-.5-1-1v-15c0-.6.5-1 1-1h21c .5 0 1 .4 1 1v15c0 .5-.5 1-1 1z" fill="none" fill-rule="evenodd" stroke-miterlimit="10" stroke-width="3"></path><path clip-rule="evenodd" d="m24.8 10h4.2c.5 0 1 .4 1 1v15c0 .5-.5 1-1 1h-21c-.6 0-1-.4-1-1v-4" fill="none" fill-rule="evenodd" stroke-miterlimit="10" stroke-width="3"></path><path d="m12.9 17.2c-.7-.1-1.5-.4-2.1-.9l.8-1.2c.6.5 1.1.7 1.7.7.7 0 1-.3 1-.8 0-1.2-3.2-1.2-3.2-3.4 0-1.2.7-2 1.8-2.2v-1.3h1.2v1.2c.8.1 1.3.5 1.8 1l-.9 1c-.4-.4-.8-.6-1.3-.6-.6 0-.9.2-.9.8 0 1.1 3.2 1 3.2 3.3 0 1.2-.6 2-1.9 2.3v1.2h-1.2z" stroke="none"></path></g>
                                                </svg>
                                            </div>
                                            <div class="stepper__step-text">Chốt Hóa Đơn</div>
                                            <div class="stepper__step-date">@Model.dict[3].date</div>
                                        </div>
                                        <div class="stepper__step stepper__step--pending" title="Người phụ trách" data-toggle="popover" data-trigger="hover" data-placement="top" data-content="@Model.dict[5].name">
                                            <div class="stepper__step-icon @Model.dict[5].classAttr">
                                                <svg class="shopee-svg-icon icon-order-received" enable-background="new 0 0 32 32" viewBox="0 0 32 32" x="0" y="0">
                                                    <g>
                                                        <polygon fill="none" points="2 28 2 19.2 10.6 19.2 11.7 21.5 19.8 21.5 20.9 19.2 30 19.1 30 28" stroke-linejoin="round" stroke-miterlimit="10" stroke-width="3"></polygon>
                                                        <polyline fill="none" points="21 8 27 8 30 19.1" stroke-linecap="round" stroke-linejoin="round" stroke-miterlimit="10" stroke-width="3"></polyline>
                                                        <polyline fill="none" points="2 19.2 5 8 11 8" stroke-linecap="round" stroke-linejoin="round" stroke-miterlimit="10" stroke-width="3"></polyline>
                                                        <line fill="none" stroke-linecap="round" stroke-linejoin="round" stroke-miterlimit="10" stroke-width="3" x1="16" x2="16" y1="4" y2="14"></line>
                                                        <path d="m20.1 13.4-3.6 3.6c-.3.3-.7.3-.9 0l-3.6-3.6c-.4-.4-.1-1.1.5-1.1h7.2c.5 0 .8.7.4 1.1z" stroke="none"></path>
                                                    </g>
                                                </svg>
                                            </div>
                                            <div class="stepper__step-text">Xuất kho</div>
                                            <div class="stepper__step-date">@Model.dict[5].date</div>
                                        </div>
                                        <div class="stepper__step" title="Người phụ trách" data-toggle="popover" data-trigger="hover" data-placement="top" data-content="@Model.dict[6].name">
                                            <div class="stepper__step-icon @Model.dict[6].classAttr">
                                                <svg class="shopee-svg-icon icon-order-shipping" enable-background="new 0 0 32 32" viewBox="0 0 32 32" x="0" y="0">
                                                    <g>
                                                        <line fill="none" stroke-linejoin="round" stroke-miterlimit="10" stroke-width="3" x1="18.1" x2="9.6" y1="20.5" y2="20.5"></line>
                                                        <circle cx="7.5" cy="23.5" fill="none" r="4" stroke-miterlimit="10" stroke-width="3"></circle>
                                                        <circle cx="20.5" cy="23.5" fill="none" r="4" stroke-miterlimit="10" stroke-width="3"></circle>
                                                        <line fill="none" stroke-miterlimit="10" stroke-width="3" x1="19.7" x2="30" y1="15.5" y2="15.5"></line>
                                                        <polyline fill="none" points="4.6 20.5 1.5 20.5 1.5 4.5 20.5 4.5 20.5 18.4" stroke-linejoin="round" stroke-miterlimit="10" stroke-width="3"></polyline>
                                                        <polyline fill="none" points="20.5 9 29.5 9 30.5 22 24.7 22" stroke-linejoin="round" stroke-miterlimit="10" stroke-width="3"></polyline>
                                                    </g>
                                                </svg>
                                            </div>
                                            <div class="stepper__step-text">Giao hàng</div>
                                            <div class="stepper__step-date">@Model.dict[6].date</div>
                                        </div>
                                        <div class="stepper__step" title="Người phụ trách" data-toggle="popover" data-trigger="hover" data-placement="top" data-content="@Model.dict[7].name">
                                            <div class="stepper__step-icon @Model.dict[7].classAttr">
                                                <svg class="shopee-svg-icon icon-order-rating" enable-background="new 0 0 32 32" viewBox="0 0 32 32" x="0" y="0">
                                                    <polygon fill="none" points="16 3.2 20.2 11.9 29.5 13 22.2 19 24.3 28.8 16 23.8 7.7 28.8 9.8 19 2.5 13 11.8 11.9" stroke-linecap="round" stroke-linejoin="round" stroke-miterlimit="10" stroke-width="3"></polygon>
                                                </svg>
                                            </div>
                                            <div class="stepper__step-text">Nhận hàng</div>
                                            <div class="stepper__step-date">@Model.dict[7].date</div>
                                        </div>
                                        <div class="stepper__line">
                                            <div class="stepper__line-background" style="background: rgb(224, 224, 224);"></div>
                                            <div class="stepper__line-foreground" style="width: @Model.lineStatus; background: rgb(45, 194, 88);"></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row" style="margin-top: 20px;">
                            <div class="col-md-12">
                                <div class="box box-solid">
                                    <div class="box-header" style="border: 1px solid #f4f4f4;">
                                        <h4 class="box-title">Chi Tiết</h4>
                                    </div>
                                    <!-- /.box-header -->
                                    <div class="col-md-4">
                                        <div class="box-body" style="margin-top: 25px">
                                            <h5><b>@Model.customerName</b></h5><br />
                                            <h5><b>Số Điện Thoại :</b> @Model.tel</h5><br />
                                            <h5><b>Địa Chỉ :</b> @Model.deliveryAddress</h5>
                                        </div>
                                    </div>
                                    <div class="col-md-8">
                                        <div class="box-body">
                                            <ul class="timeline">

                                                <!-- timeline time label -->
                                                <li class="time-label">
                                                    <span class="bg-red">
                                                        @Model.dateExport.Value.ToString("MM/dd/yyyy")
                                                    </span>
                                                </li>
                                                <!-- /.timeline-label -->
                                                <!-- timeline item -->
                                                @if (Model.dict[7].date != null)
                                                {
                                                    <li>
                                                        <!-- timeline icon -->
                                                        <i class="fa fa-hand-o-right bg-blue"></i>
                                                        <div class="timeline-item">
                                                            <span class="time"><i class="fa fa-clock-o"></i> @Model.dict[7].date</span>
                                                            <h3 class="timeline-header">Đã nhận hàng</h3>
                                                        </div>
                                                    </li>
                                                }
                                                <!-- END timeline item -->
                                                <!-- timeline item -->
                                                @if (Model.dict[6].date != null)
                                                {
                                                    <li>
                                                        <!-- timeline icon -->
                                                        <i class="fa fa-hand-o-right bg-blue"></i>
                                                        <div class="timeline-item">
                                                            <span class="time"><i class="fa fa-clock-o"></i> @Model.dict[6].date</span>
                                                            <h3 class="timeline-header">Đang giao hàng</h3>
                                                        </div>
                                                    </li>
                                                }
                                                <!-- END timeline item -->
                                                <!-- timeline item -->
                                                @if (Model.dict[5].date != null)
                                                {
                                                    <li>
                                                        <!-- timeline icon -->
                                                        <i class="fa fa-hand-o-right bg-blue"></i>
                                                        <div class="timeline-item">
                                                            <span class="time"><i class="fa fa-clock-o"></i> @Model.dict[5].date</span>
                                                            <h3 class="timeline-header">Đã xuất kho</h3>
                                                        </div>
                                                    </li>
                                                }
                                                <!-- END timeline item -->
                                                <!-- timeline item -->
                                                @if (Model.dict[3].date != null)
                                                {
                                                    <li>
                                                        <!-- timeline icon -->
                                                        <i class="fa fa-hand-o-right bg-blue"></i>
                                                        <div class="timeline-item">
                                                            <span class="time"><i class="fa fa-clock-o"></i> @Model.dict[3].date</span>
                                                            <h3 class="timeline-header">Đã xuất hoá đơn</h3>
                                                        </div>
                                                    </li>
                                                }
                                                <!-- END timeline item -->
                                                <!-- timeline item -->
                                                @if (Model.dict[1].date != null)
                                                {
                                                    <li>
                                                        <!-- timeline icon -->
                                                        <i class="fa fa-hand-o-right bg-blue"></i>
                                                        <div class="timeline-item">
                                                            <span class="time"><i class="fa fa-clock-o"></i> @Model.dict[1].date</span>
                                                            <h3 class="timeline-header">Đã lập đơn hàng</h3>
                                                        </div>
                                                    </li>
                                                }
                                                <!-- END timeline item -->
                                            </ul>
                                        </div>
                                    </div>
                                    <!-- /.box-body -->
                                </div>
                            </div>
                        </div>

                        <div class="row" style="margin-top: 20px; padding-bottom: 30px;">
                            <div class="col-md-12">
                                <div class="box box-solid">
                                    <div class="box-header" style="border: 1px solid #f4f4f4;">
                                        <h4 class="box-title">Thông tin vận chuyển</h4>
                                    </div>
                                    <!-- /.box-header -->
                                    <div class="col-md-12">
                                        <div class="box-body">
                                            <div class="row">
                                                <div class="col-md-4">
                                                    <label>Công ty</label>
                                                    <div class="input-group">
                                                        <span class="input-group-addon"><i class="fa fa-user"></i></span>
                                                        <input class="form-control" disabled>
                                                    </div>
                                                </div>
                                                <div class="col-md-4">
                                                    <label>Lái Xe</label>
                                                    <div class="input-group">
                                                        <span class="input-group-addon"><i class="fa fa-user"></i></span>
                                                        <input class="form-control" value="@Model.driverName" disabled>
                                                    </div>
                                                </div>
                                                <div class="col-md-4">
                                                    <label>Số Điện Thoại</label>
                                                    <div class="input-group">
                                                        <span class="input-group-addon"><i class="fa fa-user"></i></span>
                                                        <input class="form-control" disabled>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="row">
                                                <div class="col-md-4">
                                                    <label>Biến kiểm soát</label>
                                                    <div class="input-group">
                                                        <span class="input-group-addon"><i class="fa fa-user"></i></span>
                                                        <input class="form-control" disabled>
                                                    </div>
                                                </div>
                                                <div class="col-md-4">
                                                    <label>Ngày xuất phiếu</label>
                                                    <div class="input-group">
                                                        <span class="input-group-addon"><i class="fa fa-user"></i></span>
                                                        <input class="form-control" value="@Model.dateExport.Value.ToString("MM/dd/yyyy")" disabled>
                                                    </div>
                                                </div>
                                                <div class="col-md-4">
                                                    <label>Ngày hoàn thành</label>
                                                    <div class="input-group">
                                                        <span class="input-group-addon"><i class="fa fa-user"></i></span>
                                                        <input class="form-control" value="@Model.dateComplete" disabled>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.col-->
            </div>
            <!-- ./row -->
        </div>
    </section>
}
@section ChiTietPhieu
{
    <script>
        $(document).ready(function () {
            $('[data-toggle="tooltip"]').tooltip();
            $('[data-toggle="popover"]').popover();
        });
    </script>
}



