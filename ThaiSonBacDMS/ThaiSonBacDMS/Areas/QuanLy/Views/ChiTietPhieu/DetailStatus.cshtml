@model ThaiSonBacDMS.Areas.QuanLy.Models.OrderTotalModel
@{
    ViewBag.Title = "DetailStatus";
    Layout = "~/Areas/QuanLy/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="/Assets/dist/css/pages/detail_progress.css">
<section class="content-header">
    <ol class="breadcrumb">
        <li><i class="fa fa-dashboard"></i>&nbsp;&nbsp;&nbsp;@Html.ActionLink("Trang chủ", "Index", "Home")</li>
        <li>Đơn hàng</li>
        <li>Phiếu đang xử lý</li>
        <li>Chi tiết phiếu</li>
        <li class="active">Tiến trình đơn hàng</li>
    </ol>
</section>
@using (Html.BeginForm())
