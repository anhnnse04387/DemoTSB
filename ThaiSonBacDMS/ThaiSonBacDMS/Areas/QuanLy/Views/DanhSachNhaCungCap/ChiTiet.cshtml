                            </div>
                            <div class="row">
                                <div class="col-xs-12">
                                    <span class="label label-primary pull-right" id="attach_box">Xem tất cả</span>
                                </div>
                            </div>
                            <br>
                        </div>
                    </div>
                    <div class="tab-pane" id="chinhsua" style="padding-bottom: 32px;">
                        <div class="row">
                            <div id="kv-avatar-errors-2" class="center-block" style="width:800px;display:none"></div>
                            <form class="form form-vertical">
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="col-md-4 text-center">
                                            <div id="image-preview">
                                                <label for="image-upload" id="image-label">Chọn hình ảnh</label>
                                                <input type="file" name="image" id="image-upload" />
                                            </div>
                                        </div>
                                        <div class="col-md-8">
                                            <div class="col-md-12">
                                                <div class="row">
                                                    <label>Đơn vị</label>
                                                    <div class="input-group">
                                                        <span class="input-group-addon">
                                                            <i class="fa fa-user"></i>
                                                        </span>
                                                        <input class="form-control" id="supplier_name" value="@Model.supllier.Supplier_name">
                                                    </div>
                                                </div>
                                                <div class="row" style="margin-top: 10px;">
                                                    <label>Email</label>
                                                    <div class="input-group">
                                                        <span class="input-group-addon">
                                                            <i class="fa fa-address-book"></i>
                                                        </span>
                                                        <input class="form-control" id="supplier_email" value="@Model.supllier.Mail" type="text">
                                                    </div>
                                                </div>
                                                <div class="row" style="margin-top: 10px;">
                                                    <label>Địa chỉ</label>
                                                    <div class="input-group">
                                                        <span class="input-group-addon">
                                                            <i class="fa fa-address-book"></i>
                                                        </span>
                                                        <input class="form-control" id="address" value="@Model.supllier.Supplier_address" type="text">
                                                    </div>
                                                </div>
                                                <div class="row" style="margin-top: 10px;">
                                                    <label>Số điện thoại</label>
                                                    <div class="input-group">
                                                        <span class="input-group-addon">
