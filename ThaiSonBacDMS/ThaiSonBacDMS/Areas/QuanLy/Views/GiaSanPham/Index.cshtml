@model ThaiSonBacDMS.Areas.QuanLy.Models.GiaSanPhamModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/QuanLy/Views/Shared/_Layout.cshtml";
}

<style>
    #example1 {
        background-color: rgb(240, 240, 240);
    }

    .ui-autocomplete {
        max-height: 300px;
        overflow-y: auto; /* prevent horizontal scrollbar */
        overflow-x: hidden; /* add padding to account for vertical scrollbar */
        z-index: 1000 !important;
    }

    #example1 thead tr th {
        vertical-align: middle !important;
        text-align: center;
        background-color: #3c8dbc;
        color: #fff;
    }

    tfoot {
        color: white;
        text-align: center;
        font-size: 15px;
        font-weight: bold;
        background-color: #544d61;
    }

    .right {
        text-align: right;
    }

    .left {
        text-align: left;
    }

    label {
        display: inline-block;
        max-width: 100%;
        margin-bottom: 5px;
        font-weight: 500;
    }

    .table1 {
        padding-bottom: 35px;
    }

    .ui-autocomplete-input {
        max-height: 200px;
        overflow: hidden;
        overflow-y: scroll;
    }
</style>
<section class="content-header">
    <ol class="breadcrumb">
        <li>
            <a href="@Url.Action("Index","Home")">
                <i class="fa fa-dashboard"></i> Trang Chủ
            </a>
        </li>
        <li><a href="">Hàng hóa</a></li>
        <li><a href="@Url.Action("Index","GiaSanPham")">Giá Hàng Hóa</a></li>
    </ol>
</section>
@using (Html.BeginForm("Index", "GiaSanPham", FormMethod.Post))
{
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box">
                    <div class="row" style="margin-left:0px; margin-right:0px; margin-top: 10px;margin-bottom: -15px">
                        <div class="col-md-12">
                            <h4>
                                <b>GIÁ HÀNG HÓA</b>
                            </h4>
                        </div>
                    </div>
                    <div class="box-body">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="box">
                                    <div class="row" style="margin-top: 10px;margin-left: 0px;margin-right: 0px">
                                        <div class="col-md-12">
                                            <h4>Tìm kiếm theo</h4>
                                        </div>
                                    </div>
                                    <!-- /.box-header -->
                                    <table class="table">
                                        <tbody>
                                            <tr>
                                                <td style="width:90px">Tên sản phẩm</td>
                                                <td style="width:400px">
                                                    <div class="input-group">
                                                        <span class="input-group-addon">
                                                            <i class="fa fa-file"></i>
                                                        </span>
                                                        @Html.TextBoxFor(model => model.pCodeSearch, new { @class = "form-control", @placeholder = "Tên sản phẩm...", @id = "pCodeSearch" })
                                                    </div>
                                                </td>

                                                <td style="width:80px">Danh mục</td>
                                                <td style="width:400px">
                                                    <div class="input-group">
                                                        <span class="input-group-addon">
                                                            <i class="fa fa-tree"></i>
                                                        </span>
                                                        @Html.DropDownListFor(model => model.categorySearch, Model.lstCateSearch, "Tất cả", new { @class = "form-control" })
                                                    </div>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>Giá</td>
                                                <td>
                                                    <div class="col-sm-5 no-padding">
                                                        <div class="input-group">
                                                            <span class="input-group-addon">Từ</span>
                                                            @Html.TextBoxFor(model => model.priceFrom, new { @class = "form-control", @onchange = "checkData()", @id = "priceFrom", @placeholder = "100,000" })
                                                        </div>
                                                    </div>
                                                    <div class="col-sm-6 col-sm-offset-1 no-padding">
                                                        <div class="input-group">
                                                            <span class="input-group-addon">Đến</span>
                                                            @Html.TextBoxFor(model => model.priceTo, new { @class = "form-control", @onchange = "checkData()", @id = "priceTo", @placeholder = "999,999,999" })
                                                        </div>
                                                    </div>
                                                </td>
                                                <td>VAT</td>
                                                <td>
                                                    <label style="padding-right : 20px;">
                                                        @Html.RadioButton("VAT", "1", true)
                                                        Trước VAT
                                                    </label>
                                                    <label class="custom-chk">
                                                        @Html.RadioButton("VAT", "0")
                                                        Sau VAT
                                                    </label>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                    <!-- /.box-body -->
                                    <div class="box-footer clearfix">
                                        <div class="pagination pagination-sm no-margin pull-right">
                                            <button type="submit" class="btn btn-block btn-primary" id="btnSearch" onclick="setData()">Tìm kiếm <i class="fa fa-search"></i></button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="box-body table1">
                        <div class="row">
                            <div class="col-md-12">
                                <fieldset>
                                    <table id="example1" class="table table-bordered table-striped">
                                        <thead>
                                            <tr>
                                                <th>STT</th>
                                                <th colspan="2">Tên sản phẩm</th>
                                                <th>Danh Mục</th>
                                                <th>CIF(USD)</th>
                                                <th>Giá Trước VAT (USD)</th>
                                                <th>Giá Trước VAT (VND)</th>
                                                <th>VAT</th>
                                                <th>Giá sau VAT (USD)</th>
                                                <th>Giá sau VAT (VND)</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @if (Model.lstGiaSanPham.Count == 0)
                                            {
                                                <tr>
                                                    <td style="border-right: none !important;"></td>
                                                    <td style="border-right: none !important;border-left:none !important;text-align:right">Không tìm thấy bản ghi nào!</td>
                                                    <td style="border-right: none !important;border-left:none !important"></td>
                                                    <td style="border-right: none !important;border-left:none !important"></td>
                                                    <td style="border-right: none !important;border-left:none !important"></td>
                                                    <td style="border-right: none !important;border-left:none !important"></td>
                                                    <td style="border-right: none !important;border-left:none !important"></td>
                                                    <td style="border-right: none !important;border-left:none !important"></td>
                                                    <td style="border-right: none !important;border-left:none !important"></td>
                                                    <td class="right"></td>
                                                </tr>
                                            }
                                            else
                                            {
                                                int i = 1;
                                                foreach (var itemCate in Model.map)
                                                {
                                                    <tr style="background-color:yellow">
                                                        <td style="border-right: none !important;"></td>
                                                        <td style="border-right: none !important;border-left:none !important;text-align:right">@itemCate.Key</td>
                                                        <td style="border-right: none !important;border-left:none !important"></td>
                                                        <td style="border-right: none !important;border-left:none !important"></td>
                                                        <td style="border-right: none !important;border-left:none !important"></td>
                                                        <td style="border-right: none !important;border-left:none !important"></td>
                                                        <td style="border-right: none !important;border-left:none !important"></td>
                                                        <td style="border-right: none !important;border-left:none !important"></td>
                                                        <td style="border-right: none !important;border-left:none !important"></td>
                                                        <td class="right"></td>
                                                    </tr>

                                                    foreach (var items in itemCate.Value.ToList())
                                                    {
                                                        <tr>
                                                            <td style="text-align: left">@i</td>
                                                            <td style="border-right: none;text-align:left">@Html.ActionLink(@items.pName, "Index", "ChiTietSanPham", new { product_Id = @items.pId }, null)</td>
                                                            <td style="border-left: none;text-align:left">@Html.ActionLink(@items.pParam, "Index", "ChiTietSanPham", new { product_Id = @items.pId }, null)</td>
                                                            <td style="text-align:left">@itemCate.Key</td>
                                                            <td class="text-center numberUSD">@items.cif</td>
                                                            <td class="right numberUSD">@items.price_before_vat_usd</td>
                                                            <td class="right number">@items.price_before_vat_vnd</td>
                                                            <td class="text-center">@items.vat<span>%</span></td>
                                                            <td class="right numberUSD">@items.price_after_vat_usd</td>
                                                            <td class="right number">@items.price_after_vat_vnd</td>
                                                        </tr>
                                                        i++;
                                                    }
                                                }
                                            }
                                        </tbody>
                                    </table>
                                </fieldset>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </section>
    @section Index{
        <script src="~/Assets/dist/js/sweetalert2.all.js"></script>
        <script src="/Assets/dist/js/autoNumeric.js"></script>
        <script src="/Assets/dist/js/autoNumeric.min.js"></script>
        <script>
            $('.number').autoNumeric('init', { minimumValue: '1', maximumValue: '9999999999999', digitGroupSeparator: ',', mDec: '0' });
            $('.numberUSD').autoNumeric('init', { minimumValue: '1', maximumValue: '9999999999999', digitGroupSeparator: ',', mDec: '2' });
            $('#example1').DataTable({
                'paging': true,
                'lengthChange': true,
                'searching': false,
                'ordering': false,
                'info': true,
                'autoWidth': false,
                'language': {
                    "lengthMenu": "Hiển thị _MENU_ dòng",
                    "info": "Đang hiển thị _START_ tới _END_ tổng số _TOTAL_ kết quả",
                    "paginate": {
                        "first": "Trang đầu",
                        "last": "Trang cuối",
                        "next": "Tiếp",
                        "previous": "Trước",
                    }
                }

            });


            $("#pCodeSearch").autocomplete({
                source: function (req, responseFn) {
                    var re = req.term;
                    if (re.length > 2) {
                        $.ajax({
                            url: '/QuanLy/TonKho/GetSearchValue',
                            data: {
                                searchValue: $("#pCodeSearch").val()
                            },
                            dataType: "json",
                            success: function (data) {
                                var array = data.error ? [] : $.map(data, function (m) {
                                    return {
                                        label: m.pCodeSearch,
                                        value: m.pCodeSearch,
                                    };
                                });
                                if (array.length == 0) {
                                    $("#pCodeSearch").val("");
                                }
                                responseFn(array);
                            }
                        });
                    } else {
                        $("#pCodeSearch").val("");
                    }
                },
                 change: function (event, ui) {
                    if (ui.item) {
                        event.preventDefault();
                        $("#pCodeSearch").val(ui.item.value);
                    } else {
                        $("#pCodeSearch").val("");
                        $("#pCodeSearch").text("");
                    }
                }, focus: function (event, ui) {
                    $("#pCodeSearch").val(ui.item.value);
                    event.preventDefault();
                }
            }).autocomplete("widget").addClass("fixed-height");
            $('#pCodeSearch').on('blur', function () {
                if ($(this).val().length === 1) {  //check for no. of characters entered
                    $(this).val('');  // clear the textbox
                    $(this).text('');
                }
            });
            $(document).ready(function () {
                $('#priceFrom').autoNumeric('init', { minimumValue: '1', maximumValue: '9999999999999', digitGroupSeparator: ',', mDec: '0' });
                $('#priceTo').autoNumeric('init', { minimumValue: '1', maximumValue: '9999999999999', digitGroupSeparator: ',', mDec: '0' });
                $("#beforeVAT").attr("checked", "checked");
                //setData();
            });
            function setData() {
                //$('#priceFrom').autoNumeric('init', { minimumValue: '1', maximumValue: '9999999999999', digitGroupSeparator: ',', mDec: '0' });
                var priceFrom = $('#priceFrom').val();
                var priceTo = $('#priceTo').val();
                if (priceFrom !== "" && priceFrom !== 0) {
                    //$('#priceFrom').text(priceFrom);
                    priceFrom = priceFrom.replace(/,/g, '');
                    $('#priceFrom').val(priceFrom);
                    //$('#priceFrom').autoNumeric('init', { minimumValue: '1', maximumValue: '9999999999999', digitGroupSeparator: ',', mDec: '0' });
                }
                if (priceTo !== "" && priceTo !== 0) {
                    priceTo = priceTo.replace(/,/g, '');
                    $('#priceTo').val(priceTo);
                }

            };

            function checkData() {
                var value1 = $("#priceFrom").val();
                var value2 = $("#priceTo").val();

                if (value1 && value2) {
                    value1 = parseInt(value1.replace(/,/g, ''));
                    value2 = parseInt(value2.replace(/,/g, ''));
                    if (value2 < value1) {
                        swal({
                            text: 'Giá đến phải lớn hơn giá từ!',
                            type: 'error',
                            timer: 5000,
                            showConfirmButton: true
                        });
                        $("#btnSearch").prop('disabled', true);
                    } else {
                        $("#btnSearch").prop('disabled', false);
                    }
                } else {
                    $("#btnSearch").prop('disabled', false);
                }
            }
        </script>
    }
}
