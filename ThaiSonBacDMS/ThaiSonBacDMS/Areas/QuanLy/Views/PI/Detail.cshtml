@model ThaiSonBacDMS.Areas.QuanLy.Models.PIModel
@{
    ViewBag.Title = "Detail";
    Layout = "~/Areas/QuanLy/Views/Shared/_Layout.cshtml";
}
<style>
    .number {
        text-align: right;
    }

    .menu-button {
        background-color: #fcf9f9;
        margin-top: 20px;
        padding-top: 20px;
        padding-right: 25px;
    }

    .custom-btn {
        padding: 10px 5px;
        min-width: 80px;
        height: 55px;
    }

    .mainTable {
        background-color: rgb(240, 240, 240);
    }

        .mainTable thead tr th {
            vertical-align: middle !important;
            text-align: center;
            background-color: #3c8dbc;
            color: #fff;
        }

        .mainTable tbody td:nth-child(6), .mainTable tbody td:nth-child(7),
        .mainTable tbody td:nth-child(9) {
            text-align: right;
        }

    .pointerCursor {
        cursor: pointer;
    }

    .textCursor {
        cursor: text;
    }

    .noDisplay {
        display: none !important;
    }
</style>
<section class="content-header">
    <ol class="breadcrumb">
        <li><i class="fa fa-dashboard"></i>&nbsp;&nbsp;&nbsp;@Html.ActionLink("Trang chủ", "Index", "Home")</li>
        <li>Hàng hóa</li>
        <li>Yêu cầu nhập</li>
        <li>Lịch sử yêu cầu nhập</li>
        <li class="active">Chi tiết hóa đơn</li>
    </ol>
</section>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box">
                    <div class="box-header" style="text-align: center;margin-top: 30px;">
                        <h3 class="box-title with-border"><b style="font-size: 25px;">PI No @Model.pi.Purchase_invoice_no</b></h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body pad">
                        <div class="row">
                            <div class="box-header with-border text-center menu-button" style="margin-left: 5px; margin-right: 5px;">
                                <a class="btn btn-app custom-btn" href="@Url.Action("Index", "PI")" target="_blank" data-toggle="tooltip" title="Tạo Mới" data-placement="bottom">
                                    <i class="fa fa-plus-square text-green"></i>
                                    <span><strong>Tạo Mới</strong></span>
                                </a>

                                <a class="btn btn-app custom-btn disabled">
                                    <i class="fa fa-edit text-gray"></i>
                                    <span><strong>Sửa</strong></span>
                                </a>
                                <a class="btn btn-app custom-btn disabled">
                                    <i class="fa fa-save text-gray"></i>
                                    <span><strong>Lưu</strong></span>
                                </a>
                                <a class="btn btn-app custom-btn disabled">
                                    <i class="fa fa-close text-gray"></i>
                                    <span><strong>Hủy</strong></span>
                                </a>
                                <button class="btn btn-app custom-btn disabled">
                                    <i class="fa fa-check-circle text-gray"></i>
                                    <span><strong>Chốt đơn</strong></span>
                                </button>
                                <a class="btn btn-app custom-btn disabled">
                                    <i class="fa fa-exchange text-gray"></i>
                                    <span><strong>Đổi trả</strong></span>
                                </a>
                                <a class="btn btn-app custom-btn" data-toggle="tooltip" title="Xem Trước" data-placement="bottom">
                                    <i class="fa fa-eye text-black"></i>
                                    <span><strong>Xem Trước</strong></span>
                                </a>
                                <a class="btn btn-app custom-btn" data-toggle="tooltip" title="In" data-placement="bottom">
                                    <i class="fa fa-print text-blue"></i>
                                    <span><strong>In</strong></span>
                                </a>
                                <a class="btn btn-app custom-btn disabled">
                                    <i class="fa fa-download text-gray"></i>
                                    <span><strong>Import Excel</strong></span>
                                </a>
                                <a class="btn btn-app custom-btn disabled">
                                    <i class="fa fa-file-excel-o text-gray"></i>
                                    <span><strong>Xuất Excel</strong></span>
                                </a>
                                <a class="btn btn-app custom-btn disabled">
                                    <i class="fa fa-file-pdf-o text-gray"></i>
                                    <span><strong>Xuất PDF</strong></span>
                                </a>
                            </div>
                        </div>
                        <form>
                            <div class="box-header" style="margin-top: 25px;">
                                <div class="row">
                                    <div class="col-sm-12">
                                        <fieldset>
                                            <legend><b style="font-size: 17px;">Order's Information</b></legend>
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <label>PI No.</label><span style="color: red;">*</span>
                                                    <div class="input-group">
                                                        <span class="input-group-addon"><i class="fa fa-file-o"></i></span>
                                                        <input type="text" class="form-control" disabled value="@Model.pi.Purchase_invoice_no" />
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <label>Date</label><span style="color: red;">*</span>
                                                    <div class="input-group">
                                                        <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                                                        <input type="text" class="form-control" disabled value="@Model.pi.Date_requested" />
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row" style="margin-top: 15px;">
                                                <div class="col-md-6">
                                                    <label>PO No.</label><span style="color: red;">*</span>
                                                    <div class="input-group">
                                                        <span class="input-group-addon"><i class="fa fa-bank"></i></span>
                                                        @Html.DropDownListFor(model => model.pi.PO_ID, @Model.lstPO, "--Select--", new { @class = "form-control", @disabled = "disabled" })
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <label>Commodity</label><span style="color: red;">*</span>
                                                    <div class="input-group">
                                                        <span class="input-group-addon"><i class="fa fa-user-circle-o"></i></span>
                                                        <input type="text" class="form-control" disabled value="@Model.pi.Commodity" />
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row" style="margin-top: 15px;">
                                                <div class="col-md-6">
                                                    <label>Payment term</label><span style="color: red;">*</span>
                                                    <div class="input-group">
                                                        <span class="input-group-addon"><i class="fa fa-credit-card"></i></span>
                                                        <input type="text" class="form-control" disabled value="@Model.pi.Payment_term" />
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <label>Price term</label><span style="color: red;">*</span>
                                                    <div class="input-group">
                                                        <span class="input-group-addon"><i class="fa fa-money"></i></span>
                                                        <input type="text" class="form-control" disabled value="@Model.pi.Price_term" />
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row" style="margin-top: 15px;">
                                                <div class="col-md-6">
                                                    <label>Port of loading</label><span style="color: red;">*</span>
                                                    <div class="input-group">
                                                        <span class="input-group-addon"><i class="fa fa-map-marker"></i></span>
                                                        <input type="text" class="form-control" disabled value="@Model.pi.Post_of_Loading" />
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <label>Final destination</label><span style="color: red;">*</span>
                                                    <div class="input-group">
                                                        <span class="input-group-addon"><i class="fa fa-building-o"></i></span>
                                                        <input type="text" class="form-control" disabled value="@Model.pi.Final_destination" />
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row" style="margin-top: 15px;">
                                                <div class="col-md-6">
                                                    <label>Shipment date</label><span style="color: red;">*</span>
                                                    <div class="input-group">
                                                        <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                                                        <input type="text" class="form-control" disabled value="@Model.pi.Shipment_date" />
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <label>Packing</label><span style="color: red;">*</span>
                                                    <div class="input-group">
                                                        <span class="input-group-addon"><i class="fa fa-dropbox"></i></span>
                                                        <input type="text" class="form-control" disabled value="@Model.pi.Packing" />
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row" style="margin-top: 15px;">
                                                <div class="col-md-6">
                                                    <label>Inspection</label><span style="color: red;">*</span>
                                                    <div class="input-group">
                                                        <span class="input-group-addon"><i class="fa fa-check"></i></span>
                                                        <input type="text" class="form-control" disabled value="@Model.pi.Inspection" />
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <label>Country of origin</label><span style="color: red;">*</span>
                                                    <div class="input-group">
                                                        <span class="input-group-addon"><i class="fa fa-flag"></i></span>
                                                        <input type="text" class="form-control" disabled value="@Model.pi.Country_of_origin" />
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row" style="margin-top: 15px;">
                                                <div class="col-md-6">
                                                    <label>Validity</label><span style="color: red;">*</span>
                                                    <div class="input-group">
                                                        <span class="input-group-addon"><i class="fa fa-barcode"></i></span>
                                                        <input type="text" class="form-control" disabled value="@Model.pi.Validity" />
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <label>Remarks</label><span style="color: red;">*</span>
                                                    <div class="input-group">
                                                        <span class="input-group-addon"><i class="fa fa-info"></i></span>
                                                        <input type="text" class="form-control" disabled value="@Model.pi.Remarks" />
                                                    </div>
                                                </div>
                                            </div>
                                        </fieldset>
                                    </div>
                                </div>
                            </div>
                            <div class="box-header">
                                <div class="row" style="margin-top: 10px;">
                                    <div class="col-xs-12 table-responsive">
                                        <fieldset>
                                            <legend><b style="font-size: 17px;">Order's Detail</b></legend>
                                            <table class="table table-striped mainTable">
                                                <thead>
                                                    <tr>
                                                        <th style="width: 30px;">No.</th>
                                                        <th style="width: 300px;">Product</th>
                                                        <th style="width: 100px;">Quantity</th>
                                                        <th style="width: 100px;">Price (USD)</th>
                                                        <th style="width: 100px;">Subtotal (USD)</th>
                                                        <th>Note</th>
                                                </thead>
                                                <tbody>
                                                    @if (Model.readItems != null)
                                                    {
                                                        for (int i = 0; i < Model.readItems.Count; i++)
                                                        {
                                                            <tr class="item">
                                                                <td>@(i + 1)</td>
                                                                <td><input type="hidden" class="productId" value="@Model.readItems[i].Product_ID" />@Model.readItems[i].product</td>
                                                                <td>@Model.readItems[i].Quantity</td>
                                                                <td class="number">@Model.readItems[i].per</td>
                                                                <td class="number">@Model.readItems[i].Price</td>
                                                                <td>@Model.readItems[i].NOTE</td>
                                                            </tr>
                                                        }
                                                    }
                                                    <tr style="background-color: #544d61;color: #fff;">
                                                        <td></td>
                                                        <td style="vertical-align: middle;"><b>Total</b></td>
                                                        <td></td>
                                                        <td style="text-align: right; vertical-align: middle;"><output class="number" style="color: #fff; font-weight: bold;">@Model.qttAll</output></td>
                                                        <td style="text-align: right; vertical-align: middle;"><output class="number" style="color: #fff; font-weight: bold;" id="total">@Model.pi.Total_price</output></td>
                                                        <td></td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                        </fieldset>
                                    </div>
                                    <!-- /.col -->
                                </div>
                            </div>
                            <div id="sound"></div>
                        </form>
                    </div>
                </div>
            </div>
            <!-- /.col-->
        </div>
        <!-- ./row -->
    </section>
    <!-- /.content -->
}
@section PI
{
    <script src="/Assets/dist/js/sweetalert2.all.js"></script>
    <script src="/Assets/dist/js/autoNumeric.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.number').autoNumeric('init', { minimumValue: '1', maximumValue: '9999999999999', digitGroupSeparator: ',', decimalPlacesOverride: '0' });
        });
    </script>
}



