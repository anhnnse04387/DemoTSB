@model ThaiSonBacDMS.Areas.QuanLy.Models.POModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/QuanLy/Views/Shared/_Layout.cshtml";
}
<style>
    .menu-button {
        background-color: #fcf9f9;
        margin-top: 20px;
        padding-top: 20px;
        padding-right: 25px;
    }

    .custom-btn {
        padding: 10px 5px;
        min-width: 80px;
        height: 55px;
    }

    .mainTable {
        background-color: rgb(240, 240, 240);
    }

        .mainTable thead tr th {
            vertical-align: middle !important;
            text-align: center;
            background-color: #3c8dbc;
            color: #fff;
        }

        .mainTable tbody td:nth-child(6), .mainTable tbody td:nth-child(7),
        .mainTable tbody td:nth-child(9) {
            text-align: right;
        }

    .pointerCursor {
        cursor: pointer;
    }

    .textCursor {
        cursor: text;
    }

    .noDisplay {
        display: none !important;
    }
</style>
<!-- Content Header (Page header) -->
<section class="content-header">
    <ol class="breadcrumb">
        <li><i class="fa fa-dashboard"></i>&nbsp;&nbsp;&nbsp;@Html.ActionLink("Trang chủ", "Index", "Home")</li>
        <li>Hàng hóa</li>
        <li>Yêu cầu nhập</li>
        <li class="active">Tạo yêu cầu nhâp</li>
    </ol>
</section>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box">
                    <div class="box-header" style="text-align: center;margin-top: 30px;">
                        <h3 class="box-title with-border"><b style="font-size: 25px;">Purchase Order</b></h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body pad">
                        <div class="row">
                            <div class="box-header with-border text-center menu-button" style="margin-left: 5px; margin-right: 5px;">
                                <a class="btn btn-app custom-btn" href="@Url.Action("Index", "PO")" target="_blank" data-toggle="tooltip" title="Tạo Mới" data-placement="bottom">
                                    <i class="fa fa-plus-square text-green"></i>
                                    <span><strong>Tạo Mới</strong></span>
                                </a>

                                <a class="btn btn-app custom-btn disabled">
                                    <i class="fa fa-edit text-gray"></i>
                                    <span><strong>Sửa</strong></span>
                                </a>
                                <a class="btn btn-app custom-btn disabled">
                                    <i class="fa fa-save text-gray"></i>
                                    <span><strong>Lưu</strong></span>
                                </a>
                                <a class="btn btn-app custom-btn disabled">
                                    <i class="fa fa-close text-gray"></i>
                                    <span><strong>Hủy</strong></span>
                                </a>
                                <button class="btn btn-app custom-btn" data-toggle="modal" title="Chốt đơn" id="btnSubmit" data-placement="bottom">
                                    <i class="fa fa-check-circle text-green"></i>
                                    <span><strong>Chốt đơn</strong></span>
                                </button>
                                <a class="btn btn-app custom-btn disabled">
                                    <i class="fa fa-exchange text-gray"></i>
                                    <span><strong>Đổi trả</strong></span>
                                </a>
                                <a class="btn btn-app custom-btn" data-toggle="tooltip" title="Xem Trước" data-placement="bottom">
                                    <i class="fa fa-eye text-black"></i>
                                    <span><strong>Xem Trước</strong></span>
                                </a>
                                <a class="btn btn-app custom-btn" data-toggle="tooltip" title="In" data-placement="bottom">
                                    <i class="fa fa-print text-blue"></i>
                                    <span><strong>In</strong></span>
                                </a>
                                <a class="btn btn-app custom-btn disabled">
                                    <i class="fa fa-download text-gray"></i>
                                    <span><strong>Import Excel</strong></span>
                                </a>
                                <a class="btn btn-app custom-btn disabled">
                                    <i class="fa fa-file-excel-o text-gray"></i>
                                    <span><strong>Xuất Excel</strong></span>
                                </a>
                                <a class="btn btn-app custom-btn disabled">
                                    <i class="fa fa-file-pdf-o text-gray"></i>
                                    <span><strong>Xuất PDF</strong></span>
                                </a>
                            </div>
                        </div>
                        <form style="margin-top: 25px;">
                            <div class="box-header">
                                <div class="row">
                                    <div class="col-sm-12">
                                        <fieldset>
                                            <legend><b style="font-size: 17px;">Order's Information</b></legend>
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <label>To</label><span style="color: red;">*</span>
                                                    <div class="input-group">
                                                        <span class="input-group-addon"><i class="fa fa-user-circle-o"></i></span>
                                                        @Html.DropDownListFor(model => model.Supplier_ID, @Model.lstSupplier, "--Select--", new { @class = "form-control", @id = "supplier", @required = "required" })
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <label>PO No.</label><span style="color: red;">*</span>
                                                    <div class="input-group">
                                                        <span class="input-group-addon"><i class="fa fa-bank"></i></span>
                                                        <input type="text" class="form-control" required value="@Model.PO_no" id="no">
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row" style="margin-top: 15px;">
                                                <div class="col-md-6">
                                                    <label>Address</label><span style="color: red;">*</span>
                                                    <div class="input-group">
                                                        <span class="input-group-addon"><i class="fa fa-building-o"></i></span>
                                                        <input type="text" class="form-control" id="address" required value="@Model.address">
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <label>Tel</label><span style="color: red;">*</span>
                                                    <div class="input-group">
                                                        <span class="input-group-addon"><i class="fa fa-address-book"></i></span>
                                                        <input type="text" class="form-control" id="tel" required value="@Model.tel">
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row" style="margin-top: 15px;">
                                                <div class="col-md-6">
                                                    <label>Email</label><span style="color: red;">*</span>
                                                    <div class="input-group">
                                                        <span class="input-group-addon"><i class="fa fa-envelope-o"></i></span>
                                                        <input type="text" class="form-control" id="email" required value="@Model.email" />
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <label>Payment</label><span style="color: red;">*</span>
                                                    <div class="input-group">
                                                        <span class="input-group-addon"><i class="fa fa-credit-card"></i></span>
                                                        <input type="text" class="form-control" id="payment" required value="@Model.Payment">
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row" style="margin-top: 15px;">
                                                <div class="col-md-6">
                                                    <label>Date</label><span style="color: red;">*</span>
                                                    <div class="input-group">
                                                        <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                                                        <input type="text" class="form-control datepicker" style="padding-left: 15px;" id="dateCreate" required value="@Model.Date_create">
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <label>Requested ex-work on</label><span style="color: red;">*</span>
                                                    <div class="input-group">
                                                        <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                                                        <input type="text" class="form-control datepicker" style="padding-left: 15px;" id="dateRequest" required value="@Model.Date_request_ex_work">
                                                    </div>
                                                </div>
                                            </div>
                                        </fieldset>

                                    </div>
                                </div>
                            </div>
                            <div class="box-header">
                                <div class="row" style="margin-top: 10px;">
                                    <div class="col-xs-12 table-responsive">
                                        <fieldset>
                                            <legend><b style="font-size: 17px;">Order's Detail</b></legend>
                                            <table class="table table-striped mainTable">
                                                <thead>
                                                    <tr>
                                                        <th style="width: 30px;">STT</th>
                                                        <th style="width: 450px;">Product</th>
                                                        <th style="width: 100px;">Quantity</th>
                                                        <th style="width: 100px;">Price (USD)</th>
                                                        <th style="width: 100px;">Subtotal (USD)</th>
                                                        <th>Note</th>
                                                        <th style="width: 30px;"></th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <tr class="addingRow">
                                                        <td>1</td>
                                                        <td style="vertical-align: middle;">
                                                            <input type="text" required class="form-control code" />
                                                            <input type="hidden" class="productId" />
                                                        </td>
                                                        <td><input type="text" class="form-control qtt" style="text-align: right;" required /></td>
                                                        <td><output class="per number" style="text-align: right;"></output></td>
                                                        <td><output class="subtotal number" style="text-align: right;"></output></td>
                                                        <td><input type="text" class="form-control note" /></td>
                                                        <td></td>
                                                    </tr>
                                                    <tr>
                                                        <td>
                                                            <a style="padding: 3px;" data-toggle="tooltip" title="Tạo Mới" data-placement="bottom" id="addItem" href="javascript:void(0)">
                                                                <i class="fa fa-plus-square" style="color: #3c8dbc; font-size: 20px"></i>
                                                            </a>
                                                        </td>
                                                        <td></td>
                                                        <td></td>
                                                        <td></td>
                                                        <td></td>
                                                        <td></td>
                                                        <td></td>
                                                    </tr>
                                                    <tr style="background-color: #544d61;color: #fff;">
                                                        <td style="vertical-align: middle; text-align:center" colspan="2"><b>Total</b></td>
                                                        <td style="text-align: right; vertical-align: middle;"><output id="qttAll" style="color: #fff; font-weight: bold;"></output></td>
                                                        <td></td>
                                                        <td style="text-align: right; vertical-align: middle;"><output id="total" style="color: #fff; font-weight: bold;"></output></td>
                                                        <td></td>
                                                        <td></td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                        </fieldset>
                                    </div>
                                    <!-- /.col -->
                                </div>
                            </div>
                            <div id="sound"></div>
                        </form>
                    </div>
                </div>
            </div>
            <!-- /.col-->
        </div>
        <!-- ./row -->
    </section>
    <div class="modal fade" id="confirmSubmit" role="dialog">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Xác nhận chốt đơn ?</h4>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-success" data-dismiss="modal" onclick="doneOrder();">Đồng ý</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>
                </div>
            </div>

        </div>
    </div>
    <!-- /.content -->
}
@section PO
{
    <script src="/Assets/dist/js/sweetalert2.all.js"></script>
    <script src="/Assets/bower_components/bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js"></script>
    <script src="/Assets/dist/js/autoNumeric.min.js"></script>
    <script src="/Assets/dist/js/poQuanLy.js"></script>
}