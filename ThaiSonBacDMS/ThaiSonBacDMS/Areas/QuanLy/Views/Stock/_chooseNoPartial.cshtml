@model ThaiSonBacDMS.Areas.QuanLy.Models.StockModel
@{
    Layout = null
}
<div class="row" style="margin-top: 10px;">
    <div class="col-xs-12 table-responsive">
        <fieldset>
            <legend><b style="font-size: 17px;">Chi tiết đơn hàng</b></legend>
            <table class="table table-striped mainTable">
                <thead>
                    <tr>
                        <th style="width: 30px;">STT</th>
                        <th style="width: 300px;">Sản phẩm</th>
                        <th style="width: 100px;">Số lượng</th>
                        <th style="width: 100px;">Số lượng nhập kho</th>
                        <th>Lý do</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.lstItem != null)
                    {
                        for (int i = 0; i < Model.lstItem.Count; i++)
                        {
                            <tr class="item">
                                <td>@(i + 1)</td>
                                <td><input type="hidden" class="productId" value="@Model.lstItem[i].Product_ID" />@Model.lstItem[i].productName</td>
                                <td>@Model.lstItem[i].orderQtt</td>
                                <td><input type="text" class="form-control qtt" value="@Model.lstItem[i].Quantities" required/></td>
                                <td><input type="text" class="form-control note" value="@Model.lstItem[i].Note" /></td>
                            </tr>
                        }
                    }
                    <tr style="background-color: #544d61;color: #fff;">
                        <td></td>
                        <td style="vertical-align: middle;"><b>Tổng cộng</b></td>
                        <td></td>
                        <td style="text-align: right; vertical-align: middle;"><output id="qttAll" class="number" style="color: #fff; font-weight: bold;"></output></td>
                        <td></td>
                    </tr>
                </tbody>
            </table>
        </fieldset>
    </div>
    <!-- /.col -->
</div>

