
@{
    Layout = null;
    var session = (ThaiSonBacDMS.Common.UserSession)Session[ThaiSonBacDMS.Common.CommonConstants.USER_SESSION];
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Thái Sơn Bắc - TSB</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.7 -->
    <link rel="stylesheet" href="/Assets/bower_components/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/Assets/bower_components/bootstrap-datepicker/dist/css/bootstrap-datepicker.min.css">
    <!-- Back to top -->
    <link rel="stylesheet" href="/Assets/dist/css/back-to-top.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="/Assets/bower_components/font-awesome/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="/Assets/bower_components/Ionicons/css/ionicons.min.css">
    <link rel="stylesheet" href="/Assets/dist/css/jquery-ui.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="/Assets/dist/css/AdminLTE.min.css">
    <link rel="stylesheet" href="/Assets/dist/css/animate.css">
    <!-- AdminLTE Skins. Choose a skin from the css/skins
            folder instead of downloading all of them to reduce the load. -->
    <link rel="stylesheet" href="/Assets/dist/css/skins/_all-skins.min.css">
    <link rel="stylesheet" href="/Assets/dist/css/font/GoogleFont.css">
    <!-- bootstrap toggle -->
    <link href="/Assets/dist/css/bootstrap-toggle.min.css" rel="stylesheet">
    <!-- page css -->
    @RenderSection("IndexStyle", false/*required*/)
    <!-- note srcoll -->
    <link href="~/Assets/dist/css/pages/NoteSrcoll.css" rel="stylesheet" />
</head>
<body class="hold-transition skin-blue-light sidebar-mini fixed">
    <div class="wrapper">

        <header class="main-header">
            <!-- Logo -->
            <a href="phanphoi_index.html" class="logo">
                <!-- mini logo for sidebar mini 50x50 pixels -->
                <span class="logo-mini"><b>T</b>SB</span>
                <!-- logo for regular state and mobile devices -->
                <span class="logo-lg" style="margin-left: -15px;">
                    <img style="width:50px; height:50px;" class="img-responsive pull-left" src="/Assets/dist/img/Logo TSB - Final.png" alt="Photo">
                    <b style="margin-right: 35px;">Quản trị  </b>
                    <span style="position: absolute; margin-top: 15px; margin-left: -110px; font-size: x-small;"><small>Phân hệ</small></span>
                </span>
            </a>
            <nav class="navbar navbar-static-top">
                <!-- Sidebar toggle button-->
                <a href="#" class="sidebar-toggle" data-toggle="push-menu" role="button">
                    <span class="sr-only">Toggle navigation</span>
                </a>
                <div class="navbar-custom-menu">
                    <ul class="nav navbar-nav">
                        <!-- Notifications: style can be found in dropdown.less -->
                        @{ Html.RenderAction("NotificationHeader", "Home"); }
                        <!-- User Account: style can be found in dropdown.less -->
                        <li class="dropdown user user-menu">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <img src="@session.avatar_str" class="user-image" alt="User Image">
                                <span class="hidden-xs">@session.user_info.User_name</span>
                            </a>
                            <ul class="dropdown-menu">
                                <!-- User image -->
                                <li class="user-header">
                                    <img src="@session.avatar_str" class="img-circle" alt="User Image">

                                    <p>
                                        @session.user_name<small>@session.role_name</small>
                                    </p>
                                </li>
                                <!-- Menu Footer-->
                                <li class="user-footer">
                                    <div class="pull-left">
                                        <a href="#" class="btn btn-default btn-flat">Hồ sơ</a>
                                    </div>
                                    @if (session.roleSelectFlag)
                                    {
                                        <div class="pull-left" style="margin-left: 22px;">
                                            @Html.ActionLink("Đổi phân hệ", "outConfirmRole", new { area = "QuanTri", controller = "Home" }, new { @class = "btn btn-default btn-flat", })
                                        </div>
                                    }
                                    <div class="pull-right">
                                        @Html.ActionLink("Thoát", "Logout", new { area = "", controller = "Login" }, new { @class = "btn btn-default btn-flat" })
                                    </div>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
                <!-- Note header-->
                @*@{ Html.RenderAction("NoteHeader", "Home"); }*@
            </nav>
        </header>
        <!-- Left side column. contains the logo and sidebar -->
        <aside class="main-sidebar">
            <!-- sidebar: style can be found in sidebar.less -->
            <section class="sidebar">
                <!-- Sidebar user panel -->
                <div class="user-panel">
                    <div class="pull-left image">
                        <img src="@session.avatar_str" class="img-circle" alt="User Image">
                    </div>
                    <div class="pull-left info">
                        <p>@session.user_name</p>
                        <a href="#"><i class="fa fa-circle text-success"></i> Trực tuyến</a>
                    </div>
                </div>
                <!-- search form
                <form action="#" method="get" class="sidebar-form">
                    <div class="input-group">
                        <input type="text" name="q" class="form-control" placeholder="Tìm Kiếm...">
                        <span class="input-group-btn">
                            <button type="submit" name="search" id="search-btn" class="btn btn-flat">
                                <i class="fa fa-search"></i>
                            </button>
                        </span>
                    </div>
                </form>
                /.search form -->
                <!-- sidebar menu: : style can be found in sidebar.less -->
                <ul class="sidebar-menu" data-widget="tree">
                    <li class="menu-open">
                        <a href="@Url.Action("Index", "Home")">
                            <i class="fa fa-dashboard"></i> <span>Trang chủ</span>
                        </a>
                    </li>

                    <li class="">
                        <a href="@Url.Action("Index", "Home")">
                            <i class="fa fa-star"></i> <span>Phân hệ</span>
                        </a>
                    </li>
                    <li class="treeview ">
                        <a href="">
                            <i class="fa fa-address-book"></i> <span>Người dùng</span>
                            <span class="pull-right-container">
                                <i class="fa fa-angle-left pull-right"></i>
                            </span>
                        </a>
                        <ul class="treeview-menu">
                            <li class="">
                                <a href="@Url.Action("Index", "DanhSachNguoiDungHoatDong")"><i class="fa fa-users"></i>Đang hoạt động</a>
                            </li>
                            <li>
                                <a href="@Url.Action("Index", "DanhSachNguoiDungHoatDong")"><i class="fa fa-users"></i> Đã dừng hoạt động</a>
                            </li>
                        </ul>
                    </li>
                    <li class="treeview">
                        <a href="#">
                            <i class="fa fa-paper-plane"></i> <span>Hàng hoá</span>
                            <span class="pull-right-container">
                                <i class="fa fa-angle-left pull-right"></i>
                            </span>
                        </a>
                        <ul class="treeview-menu">
                            <li class="">
                                <a href="@Url.Action("Index", "ErrorPage")"><i class="fa fa-tags"></i>Danh mục</a>
                            </li>
                            <li class="treeview">
                                <a href="#">
                                    <i class="fa fa-anchor"></i> Sản phẩm
                                    <span class="pull-right-container">
                                        <i class="fa fa-angle-left pull-right"></i>
                                    </span>
                                </a>
                                <ul class="treeview-menu">
                                    <li class=""><a href="@Url.Action("Index", "ErrorPage")"><i class="fa fa-edit"></i> Đang kinh doanh</a></li>
                                    <li class=""><a href="@Url.Action("Index", "ErrorPage")"><i class="fa fa-id-card-o"></i> Ngừng kinh doanh</a></li>
                                </ul>
                            </li>
                        </ul>
                    </li>
                    <li class="treeview ">
                        <a href="#">
                            <i class="fa fa-database"></i> <span>Tài nguyên</span>
                            <span class="pull-right-container">
                                <i class="fa fa-angle-left pull-right"></i>
                            </span>
                        </a>
                        <ul class="treeview-menu">
                            <li class="">
                                <a href="@Url.Action("Index", "ErrorPage")"><i class="fa fa-list-alt"></i>Danh sách trang</a>
                            </li>
                            <li>
                                <a href="@Url.Action("Index", "ErrorPage")"><i class="fa fa-files-o"></i> Các file tải lên</a>
                            </li>
                        </ul>
                    </li>
                </ul>
            </section>
            <!-- /.sidebar -->
        </aside>
        <div class="content-wrapper">
            @RenderBody()
        </div>

        <footer class="main-footer"  style="height: 35px;">
            <strong>Copyright &copy; 2017 <a href="http://www.thaisonbac.com.vn/">Bản quyền thuộc Thái Sơn Bắc</a>.</strong>
            <a href="#0" class="cd-top">Top</a>
        </footer>
    </div>
    <!-- ./wrapper -->
    <!-- jQuery 3 -->
    <script src="/Assets/bower_components/jquery/dist/jquery.min.js"></script>
    <script src="/Assets/dist/js/jquery-1.12.4.js"></script>
    <script src="/Assets/dist/js/jquery-ui.js"></script>
    @*@RenderSection("LapPhieu", false/*required*/)
        @RenderSection("PO", false)
        @RenderSection("Stock", false)
        @RenderSection("ChiTietPhieu", false);
        @RenderSection("List", false);*@
    <!-- Bootstrap 3.3.7 -->
    <script src="/Assets/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
    <!-- SlimScroll -->
    <script src="/Assets/bower_components/jquery-slimscroll/jquery.slimscroll.min.js"></script>
    <!-- FastClick -->
    <script src="/Assets/bower_components/fastclick/lib/fastclick.js"></script>
    <!-- AdminLTE App -->
    <script src="/Assets/dist/js/adminlte.min.js"></script>
    <!-- back-to-top -->
    <script src="/Assets/dist/js/back-to-top.js"></script>
    <!--pagejs-->
    <script src="/Assets/dist/js/pages/index.js"></script>
    @RenderSection("Index", false)
    @*@{ Html.RenderAction("NoteEdit", "Home"); }*@
    <!-- add script -->
    <script src="~/Assets/dist/js/pages/addNote.js"></script>
</body>
</html>
